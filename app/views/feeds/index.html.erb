<div class="manage-page">
  <nav class="manage-nav">
    <%= link_to "← ホーム", root_path %>
  </nav>

  <h1>フィード管理</h1>

  <p>
    <%= link_to "OPMLをインポート", import_feeds_path, class: "manage-action-link" %>
    |
    <%= link_to "OPMLをエクスポート", export_feeds_path, class: "manage-action-link" %>
  </p>

  <% if @feeds.any? %>
    <table class="manage-table">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>URL</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @feeds.each do |feed| %>
          <tr>
            <td><%= feed.title || "（未取得）" %></td>
            <td class="manage-table-url"><%= feed.url %></td>
            <td><%= feed.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="empty-message">フィードがありません。OPMLファイルをインポートしてください。</p>
  <% end %>
</div>
